<h1>Characters</h1>

<NameSearch />

<div class='row'>
  {{#each @model as |character|}}
    <Card
      @route={{'characters.character'}}
      @modelId={{character.id}}
      @heading={{character.name}}
      @thumbnail={{character.thumbnail}}
      @altTag={{character.name}}
    />
  {{/each}}
</div>

<InfinityLoader @infinityModel={{@model}}>
  {{#unless @model.reachedInfinity}}
    <Loader />
  {{/unless}}
</InfinityLoader>

{{outlet}}