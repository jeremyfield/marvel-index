<h1>Comics</h1>

<div class='row'>
  {{#each @model as |comic|}}
    <Card
      @route={{'comics.comic'}}
      @modelId={{comic.id}}
      @heading={{comic.title}}
      @thumbnail={{comic.thumbnail}}
      @altTag={{comic.title}}
    />
  {{/each}}
</div>

<InfinityLoader @infinityModel={{model}}>
  {{#unless @model.reachedInfinity}}
    <Loader />
  {{/unless}}
</InfinityLoader>

{{outlet}}